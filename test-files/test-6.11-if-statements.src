/* Test 6.11: If statements - All variations */

function testSimpleIf(x: integer) => void
{
  /* Simple if-then-else */
  if (x > 0)
    then {
      write(1);
    }
    else {
      write(0);
    };
}

function testNestedIf(a: integer, b: integer) => void
{
  /* Nested if statements */
  if (a > 0)
    then {
      if (b > 0)
        then {
          write(1);
        }
        else {
          write(2);
        };
    }
    else {
      write(3);
    };
}

function testIfWithRelops(x: integer, y: integer) => void
{
  /* If with == */
  if (x == y)
    then { write(1); }
    else { write(0); };
  
  /* If with <> */
  if (x <> y)
    then { write(1); }
    else { write(0); };
  
  /* If with < */
  if (x < y)
    then { write(1); }
    else { write(0); };
  
  /* If with > */
  if (x > y)
    then { write(1); }
    else { write(0); };
  
  /* If with <= */
  if (x <= y)
    then { write(1); }
    else { write(0); };
  
  /* If with >= */
  if (x >= y)
    then { write(1); }
    else { write(0); };
}

function testIfWithLogical(a: integer, b: integer) => void
{
  /* If with and */
  if (a > 0 and b > 0)
    then { write(1); }
    else { write(0); };
  
  /* If with or */
  if (a > 0 or b > 0)
    then { write(1); }
    else { write(0); };
  
  /* If with not */
  if (not a > 0)
    then { write(1); }
    else { write(0); };
}

function testIfWithMultipleStatements(x: integer) => void
{
  if (x > 0)
    then {
      write(1);
      write(2);
      write(3);
    }
    else {
      write(-1);
      write(-2);
      write(-3);
    };
}

function testIfWithLocalVars(x: integer) => void
{
  localvar result : integer;
  
  if (x > 0)
    then {
      result = 100;
      write(result);
    }
    else {
      result = -100;
      write(result);
    };
}

function testComplexConditions(a: integer, b: integer, c: integer) => void
{
  /* Complex condition with multiple operators */
  if (a > 0 and b < 10 or c == 5)
    then { write(1); }
    else { write(0); };
  
  /* Nested conditions */
  if ((a + b) > c)
    then { write(1); }
    else { write(0); };
}

function testMultipleIfs(x: integer) => void
{
  /* Multiple sequential if statements */
  if (x == 1)
    then { write(1); }
    else { write(0); };
  
  if (x == 2)
    then { write(2); }
    else { write(0); };
  
  if (x == 3)
    then { write(3); }
    else { write(0); };
}

function testIfElseChain(x: integer) => void
{
  /* If-else chain simulation */
  if (x == 1)
    then {
      write(1);
    }
    else {
      if (x == 2)
        then {
          write(2);
        }
        else {
          if (x == 3)
            then {
              write(3);
            }
            else {
              write(0);
            };
        };
    };
}

function testIfWithArrays() => void
{
  localvar arr : integer[10];
  localvar i : integer;
  
  i = 5;
  arr[i] = 10;
  
  if (arr[i] > 0)
    then { write(1); }
    else { write(0); };
}

function testIfWithFunctionCalls(x: integer) => integer
{
  if (x > 0)
    then {
      return(square(x));
    }
    else {
      return(0);
    };
}

function square(n: integer) => integer
{
  return(n * n);
}
